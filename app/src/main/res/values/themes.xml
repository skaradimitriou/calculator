<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/calculator_blue_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="calculator_btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/grey_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
    </style>

    <style name="calculator_normal_btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/grey_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
        <item name="android:onClick">numberAction</item>
    </style>

    <style name="calculator_operation_btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/grey_darkest</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">operationAction</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
    </style>

    <style name="calculator_equals_btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">equalsAction</item>
    </style>

    <style name="calculator_ac_btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">@color/grey_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
        <item name="android:onClick">allClearAction</item>
    </style>

    <style name="calc_text_amounts" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="singleLine">true</item>
    </style>

    <!-- text styles -->

    <style name="calculator_results_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="android:gravity">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="calculator_operations_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="android:gravity">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="title_20" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dimen_10</item>
    </style>

    <style name="text_20_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calc_equation_desc_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
    </style>

</resources>